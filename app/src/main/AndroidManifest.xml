<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.ssynhtn.money"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name=".MoneyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.test.TestSearchViewActivity">
        </activity>
        <activity
            android:name=".ui.test.TestSearchViewActivityTwo"
            android:label="@string/title_activity_test_search_view_activity_two"
            android:theme="@style/AppTheme">
        </activity>

        <provider
            android:name=".database.MoneyProvider"
            android:authorities="${applicationId}"
            android:exported="false"/>

        <activity
            android:name=".ui.RecordListActivity"
            android:label="@string/activity_record_list">
        </activity>
        <activity
            android:name=".ui.AddRecordActivity"
            android:label="@string/title_activity_add_record"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".ui.test.TestFloatingActionButtonActivity">
        </activity>
        <activity android:name=".ui.test.TestCardViewActivity">
        </activity>
        <activity android:name=".ui.test.TestSpinnerActivity">
        </activity>
        <activity android:name=".ui.test.TestPopupWindowActivity">
        </activity>
    </application>

</manifest>